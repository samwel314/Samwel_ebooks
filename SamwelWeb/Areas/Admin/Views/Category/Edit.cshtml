@model Category
@{
	ViewData["Title"] = $"Edit {Model.Name} Category ";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Edit @Model.Name Category </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="Category" method="post">
            <div class="border p-3 mt-4">
         
                <div class="mb-3 row p-1">
                    <!--We add it because his name is CategoryId
                        but if the name is id asp will create it for you
                    -->
                    <input asp-for="CategoryId" hidden class="form-control" />
                </div>
                <div class="form-floating  py-2 col-12">
                    <input asp-for="Name" class="form-control  border-0 shadow" />

                    <label class="ms-2" asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating  py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control  border-0 shadow" />
                    <label class="ms-2" asp-for="DisplayOrder"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success form-control">Edit  </button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control ">Back</a>

                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
*@


@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
 }

