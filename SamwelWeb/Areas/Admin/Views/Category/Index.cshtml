@model IEnumerable<Category>
@{
}
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">  Category List </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="container">
			<div class="row pb-3 ">
				<div class="col-6">
				
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-cloud-plus-fill"></i> Create New Category </a>
				</div>
			</div>
		</div>


		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Category Name </th>
					<th>Display Order  </th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model.OrderBy(c => c.DisplayOrder))
				{
					<tr>
						<td>@category.Name </td>
						<td>@category.DisplayOrder </td>
						<td>
							<div class="w-75 btn-group " role="group">
								<a asp-route-CategoryId="@category.CategoryId" class="btn btn-outline-info mx-2" asp-action="Edit"><i class="bi bi-pen-fill"></i> Edit</a>
								<a asp-route-CategoryId="@category.CategoryId" class="btn btn-outline-danger mx-2" asp-action="Delete"><i class="bi bi-trash3"></i> Delete</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>
</div>

