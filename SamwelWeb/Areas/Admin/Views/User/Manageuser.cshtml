@model ManageuserVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Update Role </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">

                <div class="form-floating  py-2 col-12">
                    <input asp-for="Name" class="form-control  border-0 shadow" />

                    <label class="ms-2" asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating  py-2 col-12">
                    <select class="form-select" asp-for="Role"
                    asp-items="@Model.RolesList">
                        <option selected disabled> - Select Role -</option>

                </select>
                </div>
                <div class="form-floating mb-3 col-md-12">
                    <select style="display : none" asp-for="@Model.Company" asp-items="@Model.CompanyList" class="form-select">
                        <option selected disabled> - Select Company -</option>
                    </select>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success form-control">Update  </button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary border form-control ">Back</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Role').change(function () {

                var select = $('#Role Option:Selected').text();
                if (select == 'Company') {
                    $('#Company').show();
                }
                else {
                    $('#Company').hide();
                }

            })

        })
    </script>
}