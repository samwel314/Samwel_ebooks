@page
@model IndexModel

@{
}

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List 
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-primary"><i class="bi bi-cloud-plus-fill"></i> Create New Category </a>
		</div>
	</div>
</div>


<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Category Name </th>
		<th>Display Order  </th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		@foreach (var category in Model.categories.OrderBy(c=>c.DisplayOrder))
		{
			<tr>
				<td>@category.Name </td>
				<td>@category.DisplayOrder </td>
				<td>
					<div class="w-75 btn-group " role="group">
						<a asp-page="Edit" asp-route-CategoryId="@category.CategoryId" class="btn btn-outline-info mx-2"><i class="bi bi-pen-fill"></i> Edit</a>
						<a asp-page="Delete" asp-route-CategorId="@category.CategoryId" class="btn btn-outline-danger mx-2"><i class="bi bi-trash3"></i> Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

	
